# Server Configuration
PORT=5050
HOST=0.0.0.0
NODE_ENV=development

# Frontend URLs (CORS)
# For local development
FRONTEND_URL=http://localhost:3000
FRONTEND_URL_WWW=

# For production deployment (uncomment and update)
# FRONTEND_URL=https://atomixtools.com
# FRONTEND_URL_WWW=https://www.atomixtools.com

# Request Configuration
BODY_LIMIT=10mb
REQUEST_TIMEOUT=300s

# Storage Paths (use absolute paths in production)
STORAGE_BASE_PATH=./storage
UPLOAD_PATH=./storage/uploads
OUTPUT_PATH=./storage/outputs
WORKING_PATH=./storage/working

# Rate Limiting
RATE_LIMIT_WINDOW=900000
RATE_LIMIT_MAX_REQUESTS=100
CONVERSION_RATE_LIMIT=50

# LibreOffice Configuration
LIBREOFFICE_BINARY=soffice
LIBREOFFICE_TIMEOUT=30000

# Cleanup Configuration
CLEANUP_ENABLED=true
CLEANUP_MAX_AGE=3600000
CLEANUP_INTERVAL=*/30 * * * *

# Logging
LOG_LEVEL=info
LOG_DIR=./logs
